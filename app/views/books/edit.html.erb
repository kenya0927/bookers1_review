<h1>Editing Book</h1>

<%= render "layouts/errors",obj:@book %>

<%= form_with model: @book do |f| %>
<div class="field">
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.text_area :body %>
</div>
<div class="actions">
  <%= f.submit "Update Book" %>
</div>
<% end %>
